= form_for @item do |f|
  - if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :customer
    = f.text_field :customer
  .field
    = f.label :token
    = f.text_field :token
  .field
    = f.label :size
    = f.text_field :size
  .field
    = f.label :code
    = f.text_field :code
  .field
    = f.label :wholesale_price
    = f.text_field :wholesale_price
  .field
    = f.label :retail_price
    = f.text_field :retail_price
  .field
    = f.label :selling_price
    = f.text_field :selling_price
  .field
    = f.label :discount
    = f.text_field :discount
  .field
    = f.label :status
    = f.text_field :status
  .field
    = f.label :payment_status
    = f.text_field :payment_status
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :paid_amout
    = f.text_field :paid_amout
  .field
    = f.label :photo
    = f.file_field :photo
  .actions
    = f.submit 'Save'
