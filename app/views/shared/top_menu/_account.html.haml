/ User Account: style can be found in dropdown.less
%li.dropdown.user.user-menu
  %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
    %i.glyphicon.glyphicon-user
    %span
      = current_admin.name
      %i.caret
  %ul.dropdown-menu
    / User image
    %li.user-header.bg-light-blue
      %img.img-circle{:alt => "User Image", :src => "assets/avatar5.png"}/
      %p
        = current_admin.name + " - #{current_admin.role_name}"
        %small Member since Nov. 2012
    / Menu Body
    %li.user-body
      .col-xs-4.text-center
        %a{:href => "#"} Followers
      .col-xs-4.text-center
        %a{:href => "#"} Sales
      .col-xs-4.text-center
        %a{:href => "#"} Friends
    / Menu Footer
    %li.user-footer
      .pull-left
        = link_to('Profile', edit_admin_registration_path, class: "btn btn-default btn-flat")
      .pull-right
        = link_to('Sign out', destroy_admin_session_path, method: :delete, class: "btn btn-default btn-flat")